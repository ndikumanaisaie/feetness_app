{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "linebreak-style": 0,
    "import/extensions": [ 1, {
      "js": "always", "json": "always"
    }],
    "indent": [2, "tab", { 
      "ignoredNodes": ["TemplateLiteral"]
    }]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ],
  "overrides": [
    {
      "files": ["*.jsx", "*.js"]
    }
  ]
}